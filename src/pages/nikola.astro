const seoDescription = 'Nikola Balic, Head of Science and Innovation at UNIST, Growth Lead at Codeanywhere. I talk startups, innovation, technology transfer, intellectual property, digital transformation, growth and copywriting. I\'ve been around, I\'ve seen things. I help businesses grow, write the words that sell. I speak, I write. My website, check it out.';

---

<html lang="en">

<head>
  <HomeHeader title={title} description={seoDescription} />
